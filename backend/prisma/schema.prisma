generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String    @unique
  password   String
  role       Role      @default(USER)
  department Category?

  // Relasi ke tiket yang dibuat user
  tickets Ticket[] @relation("UserTickets")

  // Relasi ke tiket yang diassign ke user (helper)
  assignedTickets Ticket[] @relation("AssignedTickets")

  comments      Comment[]
  notifications Notification[] // ← TAMBAHAN BARU
  createdAt     DateTime       @default(now())
}

model Ticket {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  category    Category
  priority    Priority
  status      TicketStatus @default(PENDING)

  // Relasi ke pembuat tiket
  createdBy   User @relation("UserTickets", fields: [createdById], references: [id])
  createdById Int

  // Relasi ke helper
  assignedTo   User? @relation("AssignedTickets", fields: [assignedToId], references: [id])
  assignedToId Int?

  comments      Comment[]
  notifications Notification[] // ← TAMBAHAN BARU
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  ticketId  Int
  createdAt DateTime @default(now())
}

// ← MODEL BARU
model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  type      String   // TICKET_CREATED, STATUS_UPDATED, COMMENT_ADDED, dll
  title     String
  message   String   @db.Text
  ticketId  Int?
  ticket    Ticket?  @relation(fields: [ticketId], references: [id])
  metadata  String?  @db.Text // JSON string untuk data tambahan
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([ticketId])
}

enum Role {
  USER
  HELPER
}

enum Category {
  IT
  HR
}

enum Priority {
  LOW
  NORMAL
  HIGH
}

enum TicketStatus {
  PENDING
  IN_PROGRESS
  WAITING_USER
  DONE
  RESOLVED
}
